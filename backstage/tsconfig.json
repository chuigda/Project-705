{
   "compilerOptions": {
     "module": "commonjs",
     "noImplicitAny": true,
     "removeComments": true,
     "preserveConstEnums": true,
     "strictNullChecks": true,
     "sourceMap": true,
     "lib": ["es2021"],
     "target": "es2021",

     "baseUrl": ".",
     "outDir": "dist",

     "paths": {
         "@app*": ["src/*"],
         "@test*": ["test/*"]
      }
   },
   "include": [
      "src",
      "test"
   ],
   "exclude": [
      "node_modules",
      "**/*.spec.ts"
   ],
}
